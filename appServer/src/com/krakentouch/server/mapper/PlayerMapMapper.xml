<?xml version="1.0" encoding="UTF-8" ?> 
    <!DOCTYPE mapper 
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.krakentouch.server.mapper.PlayerMapper">
	<insert id="insertPlayer" parameterType="PlayerMap">
		INSERT INTO PLAYERMAP
			(PlayerID, DeskID, Status, GameID) 
		VALUES
			(#{PlayerID},#{DeskID},#{Status},#{GameID}) 
    </insert>
    
    <delete id="deletePlayer" parameterType="PlayerMap">
    	DELETE FROM PLAYERMAP WHERE PlayerID = #{PlayerID}# 
    </delete>
    
    <select id="queryScore" parameterType="java.lang.String" resultType="int">
    	SELECT SCORE FROM PLAYERSCORE WHERE PlayerID = #{PlayerID}#
    </select>
	<!-- 当使用该Mybatis与Spring整合的时候，该文件必须和相应的Mapper接口文件同名，并在同一路径下 -->
</mapper> 